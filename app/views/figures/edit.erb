
<form method = "POST" action = "/figures/<%=@figure.id%>">
  <p>Name:</p>
  <input type = "text" name = "figure[name]" id = "figure_name" value = "<%=@figure.name%>">
  <p>Select Titles</p>

  <%Title.all.each do |title|%>
    <input type = 'checkbox' name = "figure[title_ids][]" id= "title_<%=title.id%>" value = "<%=title.id%>" <%='checked' if FigureTitle.find_by(figure_id: @figure.id) != nil && FigureTitle.find_by(figure_id: @figure.id).title == title %>>title.name</input>
  <%end%>

  <p>Enter A New Title</p>
  <input type = "text" name = "title[name]" id = "new_title">
  <p>Select Landmarks</p>
  <%Landmark.all.each do |landmark|%>
    <input type = 'checkbox' name = "figure[landmark_ids][]" id= "landmark_<%=landmark.id%>" value = "<%=landmark.id%>" <%='checked' if landmark.figure == @figure%>>landmark.name</input>
  <%end%>

  <p>Enter A New Landmark</p>
  <input type = "text" name = "landmark[name]" id = "new_landmark" >
  <input type ="submit" id = "Edit Figure">
</form>
